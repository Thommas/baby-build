{
  "name": "pathofchild-app",
  "version": "1.0.0",
  "license": "WTFPL",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --disable-host-check --configuration=local",
    "start:staging": "ng serve --host 0.0.0.0 --disable-host-check --configuration=staging",
    "start:locale": "ng serve --host 0.0.0.0 --disable-host-check --configuration=$BUILD_ENVIRONMENT --port 4200 --aot --i18n-locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf",
    "start:en": "BUILD_ENVIRONMENT=local BUILD_LOCALE=en npm run start:locale",
    "start:ja": "BUILD_ENVIRONMENT=local BUILD_LOCALE=ja npm run start:locale",
    "start:fr": "BUILD_ENVIRONMENT=local BUILD_LOCALE=fr npm run start:locale",
    "build:staging": "BUILD_ENVIRONMENT=staging npm run build:all",
    "build:production": "BUILD_ENVIRONMENT=production npm run build:all",
    "build:all": "npm run build-prepare && npm run build:en && npm run build:fr && npm run build:ja && npm run build:all:finish",
    "build:all:finish": "mv build/$BUILD_ENVIRONMENT/en/* build/$BUILD_ENVIRONMENT && rm -rf build/$BUILD_ENVIRONMENT/en",
    "build:en": "BUILD_LOCALE=en npm run build-locale",
    "build:ja": "BUILD_LOCALE=ja npm run build-locale",
    "build:fr": "BUILD_LOCALE=fr npm run build-locale",
    "build-prepare": "rm -rf build/$BUILD_ENVIRONMENT/$BUILD_LOCALE && mkdir -p build/$BUILD_ENVIRONMENT",
    "build-locale": "npm run build-browser && npm run build-server && npm run prerender:build && mv dist/browser build/$BUILD_ENVIRONMENT/$BUILD_LOCALE",
    "build-browser": "ng build --build-optimizer=false --aot --configuration=$BUILD_ENVIRONMENT --i18n-locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf",
    "build-server": "ng build --build-optimizer=false --aot --configuration=$BUILD_ENVIRONMENT --i18n-locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf --app 1 --output-hashing=false",
    "webpack:serve": "webpack --config ssr/webpack.server.config.js --progress --colors",
    "prerender:build": "npm run webpack:serve && cd dist && node prerender",
    "prerender:serve": "cd dist/browser && http-server",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n-extract": "./node_modules/.bin/ng-xi18n --i18nFormat=xlf -p src/tsconfig.app.json",
    "deploy:staging": "npm run build:staging && aws s3 sync --delete build/staging s3://pathofchild-app-staging",
    "deploy:production": "npm run build:production && aws s3 sync --delete build/production s3://pathofchild-app-production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.7",
    "@angular/cdk": "^6.0.7",
    "@angular/common": "^6.0.7",
    "@angular/compiler": "^6.0.7",
    "@angular/core": "^6.0.7",
    "@angular/flex-layout": "^6.0.0-beta.16",
    "@angular/forms": "^6.0.7",
    "@angular/http": "^6.0.7",
    "@angular/material": "^6.4.0",
    "@angular/material-moment-adapter": "^6.0.7",
    "@angular/platform-browser": "^6.0.7",
    "@angular/platform-browser-dynamic": "^6.0.7",
    "@angular/platform-server": "^6.0.7",
    "@angular/router": "^6.0.7",
    "@nguniversal/common": "^6.0.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@ngx-translate/core": "10.0.2",
    "@ngx-translate/http-loader": "^3.0.1",
    "angulartics2": "^6.2.0",
    "apollo-angular": "^1.1.2",
    "apollo-angular-link-http": "^1.1.1",
    "apollo-cache-inmemory": "^1.2.5",
    "apollo-client": "^2.3.5",
    "apollo-link-context": "^1.0.8",
    "auth0-js": "^9.6.1",
    "auth0-lock": "^11.7.2",
    "core-js": "^2.4.1",
    "dexie": "^2.0.4",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "hammerjs": "^2.0.8",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "rxjs": "^6.2.2",
    "sweetalert2": "^7.24.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "^6.0.7",
    "@angular/compiler-cli": "^6.0.7",
    "@angular/language-service": "^6.0.7",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.0.30",
    "codelyzer": "^4.0.2",
    "cpy-cli": "^1.0.1",
    "express": "^4.15.2",
    "http-server": "^0.10.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "pre-commit": "^1.2.2",
    "protractor": "~5.1.2",
    "reflect-metadata": "^0.1.10",
    "ts-loader": "^2.3.7",
    "tslint": "^5.7.0",
    "typescript": "~2.7.0",
    "webpack-cli": "^3.1.0"
  }
}
