{
  "name": "pathofchild-angular",
  "private": true,
  "license": "WTFPL",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --disable-host-check --configuration=dev",
    "start:staging": "ng serve --host 0.0.0.0 --disable-host-check --configuration=staging",
    "start:locale": "ng serve --host 0.0.0.0 --disable-host-check --configuration=$BUILD_ENVIRONMENT --port 4200 --aot --i18n-locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf",
    "start:en": "BUILD_ENVIRONMENT=dev BUILD_LOCALE=en npm run start:locale",
    "start:ja": "BUILD_ENVIRONMENT=dev BUILD_LOCALE=ja npm run start:locale",
    "start:fr": "BUILD_ENVIRONMENT=dev BUILD_LOCALE=fr npm run start:locale",
    "build:staging": "BUILD_ENVIRONMENT=staging npm run build:all",
    "build:production": "BUILD_ENVIRONMENT=production npm run build:all",
    "build:all": "npm run build-prepare && npm run build:en && npm run build:fr && npm run build:ja && npm run build:all:finish",
    "build:all:finish": "mv build/$BUILD_ENVIRONMENT/en/* build/$BUILD_ENVIRONMENT && rm -rf build/$BUILD_ENVIRONMENT/en",
    "build:en": "BUILD_LOCALE=en npm run build-locale",
    "build:ja": "BUILD_LOCALE=ja npm run build-locale",
    "build:fr": "BUILD_LOCALE=fr npm run build-locale",
    "build-prepare": "rm -rf build/$BUILD_ENVIRONMENT/$BUILD_LOCALE && mkdir -p build/$BUILD_ENVIRONMENT",
    "build-locale": "npm run build-browser && mv dist/browser build/$BUILD_ENVIRONMENT/$BUILD_LOCALE",
    "build-browser": "ng build --configuration=$BUILD_ENVIRONMENT --i18n-locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n-extract": "./node_modules/.bin/ng-xi18n --i18nFormat=xlf -p src/tsconfig.app.json",
    "deploy:staging": "npm run build:staging && aws s3 sync --delete build/staging s3://pathofchild-app-staging",
    "deploy:production": "npm run build:production && aws s3 sync --delete build/production s3://pathofchild-app-production",
    "deploy:all": "npm run deploy:staging && npm run deploy:production"
  },
  "dependencies": {
    "@angular/animations": "~7.0.0",
    "@angular/cdk": "~7.0.0",
    "@angular/common": "~7.0.0",
    "@angular/compiler": "~7.0.0",
    "@angular/core": "~7.0.0",
    "@angular/flex-layout": "^7.0.0-beta.19",
    "@angular/forms": "~7.0.0",
    "@angular/http": "~7.0.0",
    "@angular/material": "^6.4.0",
    "@angular/material-moment-adapter": "~7.0.0",
    "@angular/platform-browser": "~7.0.0",
    "@angular/platform-browser-dynamic": "~7.0.0",
    "@angular/platform-server": "~7.0.0",
    "@angular/router": "~7.0.0",
    "@ngrx/effects": "^7.4.0",
    "@ngrx/store": "^7.4.0",
    "@ngrx/store-devtools": "^7.4.0",
    "@nguniversal/common": "^6.0.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@ngx-translate/core": "10.0.2",
    "@ngx-translate/http-loader": "^3.0.1",
    "angulartics2": "^6.2.0",
    "apollo-angular": "^1.4.1",
    "apollo-angular-link-http": "^1.4.0",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "2.4.7",
    "apollo-link-context": "^1.0.10",
    "apollo-link-error": "^1.1.13",
    "auth0-js": "^9.13.2",
    "auth0-lock": "^10.22.0",
    "core-js": "^2.5.4",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "hammerjs": "^2.0.8",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.19",
    "moment": "^2.22.2",
    "ngrx-store-localstorage": "^7.0.1",
    "rxjs": "^6.6.3",
    "sweetalert2": "^7.24.1",
    "uuid": "^3.3.2",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1102.7",
    "@angular/cli": "^11.2.7",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/language-service": "~7.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "cpy-cli": "^1.0.1",
    "express": "^4.15.2",
    "http-server": "^0.12.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "pre-commit": "^1.2.2",
    "protractor": "~5.4.0",
    "reflect-metadata": "^0.1.10",
    "ts-loader": "^2.3.7",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6",
    "webpack-cli": "^3.1.0"
  }
}
