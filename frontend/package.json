{
  "name": "pathofchild-frontend",
  "version": "0.6.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --disable-host-check --env=local",
    "start:en": "ng serve --host 0.0.0.0 --disable-host-check --env=local --port 4200 --aot --locale en --i18n-format xlf --i18n-file ./src/locale/messages.en.xlf",
    "start:ja": "ng serve --host 0.0.0.0 --disable-host-check --env=local --port 4200 --aot --locale ja --i18n-format xlf --i18n-file ./src/locale/messages.ja.xlf",
    "start:dev": "ng serve --host 0.0.0.0 --disable-host-check --env=dev",
    "build:en": "BUILD_LOCALE=en npm run build-locale",
    "build:ja": "BUILD_LOCALE=ja npm run build-locale",
    "build:fr": "BUILD_LOCALE=fr npm run build-locale",
    "build-locale": "ng build --build-optimizer=false -vc=true --aot --env=$BUILD_ENVIRONMENT --locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf --output-path build/$BUILD_ENVIRONMENT/$BUILD_LOCALE",
    "build-prepare": "rm -rf build/$BUILD_ENVIRONMENT/$BUILD_LOCALE && mkdir -p build/$BUILD_ENVIRONMENT/$BUILD_LOCALE",
    "build-all": " npm run build-prepare && npm run build:en && npm run build:ja && npm run build:fr",
    "build": "BUILD_ENVIRONMENT=dev npm run build-all",
    "build:staging": "BUILD_ENVIRONMENT=staging npm run build-all",
    "build:production": "BUILD_ENVIRONMENT=production npm run build-all",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n-extract": "./node_modules/.bin/ng-xi18n --i18nFormat=xlf -p src/tsconfig.app.json",
    "build:client-and-server-bundles": "ng build --prod --env=$BUILD_ENVIRONMENT && ng build --prod --env=$BUILD_ENVIRONMENT --app 1 --output-hashing=false",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:prerender:staging": "BUILD_ENVIRONMENT=staging npm run build:prerender",
    "build:prerender:production": "BUILD_ENVIRONMENT=production npm run build:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "generate:prerender": "cd dist && node prerender",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/cdk": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/flex-layout": "^5.0.0-beta.13",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/material": "^5.0.0",
    "@angular/material-moment-adapter": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/platform-server": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@nguniversal/common": "^5.0.0-beta.8",
    "@nguniversal/express-engine": "^5.0.0-beta.8",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.8",
    "angulartics2": "^5.1.3",
    "apollo-angular": "^1.0.1",
    "apollo-angular-link-http": "^1.0.2-beta.0",
    "apollo-cache-inmemory": "^1.1.11",
    "apollo-client": "^2.2.7",
    "apollo-link-context": "^1.0.7",
    "auth0-js": "^9.2.0",
    "auth0-lock": "^11.3.0",
    "core-js": "^2.4.1",
    "dexie": "^2.0.2",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.7.3",
    "hammerjs": "^2.0.8",
    "jsonwebtoken": "^8.2.0",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "rxjs": "^5.5.2",
    "sweetalert2": "^7.15.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@types/node": "^8.0.30",
    "codelyzer": "^4.0.2",
    "cpy-cli": "^1.0.1",
    "express": "^4.15.2",
    "http-server": "^0.10.0",
    "pre-commit": "^1.2.2",
    "reflect-metadata": "^0.1.10",
    "ts-loader": "^2.3.7",
    "tslint": "^5.7.0",
    "typescript": "~2.4.2",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2"
  }
}
