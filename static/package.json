{
  "name": "pathofchild-static",
  "version": "1.0.0",
  "license": "WTFPL",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --disable-host-check --env=local",
    "start:staging": "ng serve --host 0.0.0.0 --disable-host-check --env=staging",
    "start:locale": "ng serve --host 0.0.0.0 --disable-host-check --env=$BUILD_ENVIRONMENT --port 4200 --aot --locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf",
    "start:en": "BUILD_ENVIRONMENT=local BUILD_LOCALE=en npm run start:locale",
    "start:ja": "BUILD_ENVIRONMENT=local BUILD_LOCALE=ja npm run start:locale",
    "start:fr": "BUILD_ENVIRONMENT=local BUILD_LOCALE=fr npm run start:locale",
    "build:staging": "BUILD_ENVIRONMENT=staging npm run build:all",
    "build:production": "BUILD_ENVIRONMENT=production npm run build:all",
    "build:all": "npm run build-prepare && npm run build:en && npm run build:fr && npm run build:ja && npm run build:all:finish",
    "build:all:finish": "mv build/$BUILD_ENVIRONMENT/en/* build/$BUILD_ENVIRONMENT && rm -rf build/$BUILD_ENVIRONMENT/en",
    "build:en": "BUILD_LOCALE=en npm run build-locale",
    "build:ja": "BUILD_LOCALE=ja npm run build-locale",
    "build:fr": "BUILD_LOCALE=fr npm run build-locale",
    "build-prepare": "rm -rf build/$BUILD_ENVIRONMENT/$BUILD_LOCALE && mkdir -p build/$BUILD_ENVIRONMENT",
    "build-locale": "npm run build-browser && npm run build-server && npm run prerender:build && mv dist/browser build/$BUILD_ENVIRONMENT/$BUILD_LOCALE",
    "build-browser": "ng build --build-optimizer=false -vc=true --aot --env=$BUILD_ENVIRONMENT --locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf",
    "build-server": "ng build --build-optimizer=false -vc=true --aot --env=$BUILD_ENVIRONMENT --locale $BUILD_LOCALE --i18n-format xlf --i18n-file ./src/locale/messages.$BUILD_LOCALE.xlf --app 1 --output-hashing=false",
    "webpack:serve": "webpack --config ssr/webpack.server.config.js --progress --colors",
    "prerender:build": "npm run webpack:serve && cd dist && node prerender",
    "prerender:serve": "cd dist/browser && http-server",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n-extract": "./node_modules/.bin/ng-xi18n --i18nFormat=xlf -p src/tsconfig.app.json",
    "deploy:staging": "npm run build:staging && npm run deploy:staging:robots && npm run deploy:staging:s3",
    "deploy:staging:robots": "echo -e \"User-agent: *\nDisallow: /\" > build/staging/robots.txt",
    "deploy:staging:s3": "aws s3 sync --delete build/staging s3://pathofchild-static-staging",
    "deploy:production": "npm run build:production && npm run deploy:production:robots && npm run deploy:production:s3",
    "deploy:production:robots": "echo -e \"User-agent: *\nAllow: /\" > build/production/robots.txt",
    "deploy:production:s3": "aws s3 sync --delete build/production s3://pathofchild-static-production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/cdk": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/flex-layout": "^5.0.0-beta.13",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/material": "^5.0.0",
    "@angular/material-moment-adapter": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/platform-server": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@nguniversal/common": "^5.0.0-beta.8",
    "@nguniversal/express-engine": "^5.0.0-beta.8",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.8",
    "@ngx-translate/core": "9.1.1",
    "@ngx-translate/http-loader": "^3.0.1",
    "angulartics2": "^5.1.3",
    "apollo-angular": "^1.0.1",
    "apollo-angular-link-http": "^1.0.2-beta.0",
    "apollo-cache-inmemory": "^1.1.11",
    "apollo-client": "^2.2.7",
    "apollo-link-context": "^1.0.7",
    "auth0-js": "^9.2.0",
    "auth0-lock": "^11.3.0",
    "core-js": "^2.4.1",
    "dexie": "^2.0.2",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.7.3",
    "hammerjs": "^2.0.8",
    "jsonwebtoken": "^8.2.0",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "rxjs": "^5.5.2",
    "sweetalert2": "^7.15.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@types/node": "^8.0.30",
    "codelyzer": "^4.0.2",
    "cpy-cli": "^1.0.1",
    "express": "^4.15.2",
    "http-server": "^0.10.0",
    "pre-commit": "^1.2.2",
    "reflect-metadata": "^0.1.10",
    "ts-loader": "^2.3.7",
    "tslint": "^5.7.0",
    "typescript": "~2.4.2",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2"
  }
}
